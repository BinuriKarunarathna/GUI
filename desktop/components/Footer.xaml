<UserControl x:Class="WpfApplication.components.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication.components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Footer -->
    <Grid Background="Black" Margin="0" VerticalAlignment="Bottom">
        <!-- Main Footer Content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Logo and About Section -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Sports Gear" FontFamily="Times New Roman" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />
            <TextBlock FontFamily="Times New Roman" Text="Founded in 2024, we focus on delivering the best sports-driven products from world-renowned brands to accelerate your performance and fitness growth." 
                   FontSize="14" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,20" />
            <TextBlock Text="© SportsGear 2024. All rights reserved." FontSize="12" Foreground="White" FontFamily="Times New Roman" />
        </StackPanel>

        <!-- Links Section -->
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- About Us -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="About Us" FontFamily="Times New Roman" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />
                <Button Content="Careers" Foreground="White"  Background="Black" Click="Button_Click" Margin="0,0,0,5" />
                <Button Content="Partnerships" Foreground="White" Background="Black" Click="Button_Click_1"  Margin="0,0,0,5" />
                <Button Content="Terms and Conditions" Foreground="White" Background="Black" Margin="0,0,0,5" />
                <Button Content="Contact Us" Foreground="White" Click="Button_Click_2" Background="Black" />
            </StackPanel>

            <!-- Help -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Help" FontFamily="Times New Roman" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />
                <Button Content="FAQ" Foreground="White" Background="Black" Margin="0,0,0,5" />
                <Button Content="Size Guide" Foreground="White" Background="Black" Margin="0,0,0,5" />
                <Button Content="Delivery and Returns" Foreground="White" Background="Black" Margin="0,0,0,5" />
                <Button Content="Orders and Payments" Foreground="White" Background="Black" />
            </StackPanel>

            <!-- Account -->
            <StackPanel Grid.Column="2" Margin="10">
                <TextBlock Text="Account" FontFamily="Times New Roman" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />
                <Button Content="Profile" Foreground="White" Background="Black" Margin="0,0,0,5" />
                <Button Content="Coupons" Foreground="White" Background="Black" Margin="0,0,0,5" />
                <Button Content="Wish List" Foreground="White" Background="Black" Margin="0,0,0,5" />
                <Button Content="Notifications" Foreground="White" Background="Black"/>
            </StackPanel>

            <!-- Social Media -->
            <StackPanel Grid.Column="3" Margin="10">
                <TextBlock Text="Social Media" FontFamily="Times New Roman" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />
                <Button Content="Facebook" Foreground="White" Background="Black" Margin="0,0,0,5" />
                <Button Content="Instagram" Foreground="White" Background="Black" Margin="0,0,0,5" />
                <Button Content="YouTube" Foreground="White" Background="Black" Margin="0,0,0,5" />
                <Button Content="Twitter" Foreground="White" Background="Black" />
            </StackPanel>
        </Grid>

        <!-- Privacy and Sitemap -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0" >
            <Button Content="Privacy Policy" Foreground="White" Background="Black"  Margin="0" />
            <TextBlock Text="•" Foreground="White" Margin="0" />
            <Button Content="Sitemap" Foreground="White" Background="Black" Click="Button_Click_3" Margin="0" />
        </StackPanel>
    </Grid>
</UserControl>
